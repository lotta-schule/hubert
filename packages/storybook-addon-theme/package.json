{
  "name": "@lotta-schule/storybook-addon-theme",
  "version": "0.0.2",
  "description": "Addon for storybook which allows managing the Hubert theme from within the documentation",
  "author": "Alexis Rinaldoni <alexis@rinaldoni.net>",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "start": "npm run build -- --watch",
    "build": "esbuild src/preset/*.tsx --bundle --sourcemap --format=esm --external:react-dom --external:@storybook/* --external:react --outdir=dist",
    "test": "jest",
    "lint": "eslint --ext js,jsx,ts,tsx src",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "require": "./preset.js"
    },
    "./*": {
      "require": "./preset.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "*.js"
  ],
  "devDependencies": {
    "@jest/globals": "^28.1.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.4",
    "esbuild": "^0.14.53",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "react": ">= 16.8.0",
    "react-dom": ">= 16.8.0"
  }
}
